@model HackHeroes.Application.HackHeroes.Commands.Students.EditStudent.EditStudentCommand
<h4>EditStudentCommand</h4>
<hr />
<div class="container">
    <div class="row">
        <div class="col-md-8">
            <div class="row">
                <div class="col-md-4">
                    <form asp-action="EditStudent">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="FirstName" class="control-label" style="font-weight: bolder;">Imię</label>
                            <input asp-for="FirstName" class="form-control" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="LastName" class="control-label" style="font-weight: bolder; color: #33333;">Nazwisko</label>
                            <input asp-for="LastName" class="form-control" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                        <input asp-for="Number" class="form-control" type="hidden" />
                        <input asp-for="StudentKey" class="form-control" type="hidden" />

                    </form>
                </div>

@if(Model.ImageUrl != null)
{
    <div id="studentImg">
        <img class="img-fluid" src="@Model.ImageUrl" alt="Obraz" />

    </div>
}

  </div>
                <div class="form-group">
                    <div class="btn-group mt-2">
                        <input type="submit" value="Zapisz" class="btn btn-primary btn card-btn" />
                        <a asp-action="ClassIndex" class="btn btn-primary btn card-btn" style="white-space: nowrap;">Powrót</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

<style>
    #studentImg {
        max-width: 100%;
    }
</style>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
